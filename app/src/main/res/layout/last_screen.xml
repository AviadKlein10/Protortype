<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/last_layout">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/layout_well_done"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.47"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Well Done!"
                android:textColor="@color/yellow"
                android:textSize="47dp"
                android:textStyle="bold|italic"
                android:typeface="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="You may also be interested in:"
                android:textColor="@color/yellow"
                android:textSize="22dp"
                android:typeface="serif" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.47"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/background_trans"
                android:paddingBottom="5dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="מחיצה למגירה
HOFTA"
                    android:textColor="@color/yellow"
                    android:textSize="16dp"
                    android:typeface="serif"
                    android:paddingBottom="10dp"/>
                <ImageView
                    android:id="@+id/drawer_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/drawer_smallerr"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.5"
                android:background="@drawable/background_trans"
                android:paddingBottom="5dp">


                <ImageView
                    android:id="@+id/mirror_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/mirror_smallerr" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="מראה לשולחן
IKORNNES"
                    android:textColor="@color/yellow"
                    android:textSize="16dp"
                    android:typeface="serif"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.06"
            android:paddingLeft="10dp">
            <ImageView
            android:id="@+id/return_btn"
            android:layout_width="@dimen/small_btn"
            android:layout_height="@dimen/small_btn"
            android:baselineAlignBottom="true"
            android:scaleX="-1"
            android:src="@drawable/icon_skip" /></LinearLayout>

    </LinearLayout>

</RelativeLayout>